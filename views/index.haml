%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title Myapp
    %link(rel="stylesheet" href="/stylesheets/screen.css")
    %script{:src =>  "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"}
    %script{:src => '/javascripts/jquery.scrollTo-min.js'}
    :javascript

      $(document).ready(function(){
        $(window)._scrollable();
        var wheight = $(window).height();
        var wwidth = $(window).width();
        $('.dimension').css('width',wwidth);
        $('.dimension').css('height',wheight);
        var bwidth = (wwidth * 5);
        var bheight = (wheight * 5); 
        $('body').css('width',bwidth);
        $('body').css('height',bheight);

        
        var c7x = wwidth * 2
        var c6x = wwidth * 3
        var c5x = wwidth * 3
        var c4x = wwidth * 2
        var c3x = wwidth * 1
        var c2x = 0
        var c1x = 0
        
        var c7y = 0
        var c6y = wheight * 1
        var c5y = wheight * 2
        var c4y = wheight * 3
        var c3y = wheight * 3
        var c2y = wheight * 2
        var c1y = wheight * 1

        $('.c0').bind('click', function() {
          $.scrollTo({ top:0, left:0}, 800);
          $('.nav ul li a').removeClass('selected');
        });       
        $('.c7').bind('click', function() {
          $.scrollTo({ top:c7y, left:c7x}, 800);
          $('.nav ul li a').removeClass('selected');
          $('.c7').addClass("selected");
        });
        $('.c6').bind('click', function() {
          $.scrollTo({ top:c6y, left:c6x}, 800);
          $('.nav ul li a').removeClass('selected');
          $('.c6').addClass("selected");
        });
        $('.c5').bind('click', function() {
          $.scrollTo({ top:c5y, left:c5x}, 800);
          $('.nav ul li a').removeClass('selected');
          $('.c5').addClass("selected");
        });
        $('.c4').bind('click', function() {
          $.scrollTo({ top:c4y, left:c4x}, 800);
          $('.nav ul li a').removeClass('selected'); 
          $('.c4').addClass("selected");
        });
        $('.c3').bind('click', function() {
          $.scrollTo({ top:c3y, left:c3x}, 800);
          $('.nav ul li a').removeClass('selected');
          $('.c3').addClass("selected");
        });
        $('.c2').bind('click', function() {
          $.scrollTo({ top:c2y, left:c2x}, 800);
          $('.nav ul li a').removeClass('selected');
          $('.c2').addClass("selected");
        });
        $('.c1').bind('click', function() {
          $.scrollTo({ top:c1y, left:c1x}, 800);
          $('.nav ul li a').removeClass('selected');
          $('.c1').addClass("selected");
        });
      });

